{
    "$jason": {
        "head": {
            "actions": {
                "handleLink": [
                    {
                        "{{#if $jason.url.indexOf('signin') !== -1 }}": {
                            "type": "$href",
                            "options": {
                                "url": "https://www.google.com"
                            }
                        }
                    },
                    {
                        "{{#else}}": {
                            "type": "$default"
                        }
                    }
                ]
            }
        },
        "body": {
            "background": {
                "type": "html",
                "url": "https://www.google.com",
                "action": {
                    "trigger": "handleLink"
                }
            }
        }
    }
}
